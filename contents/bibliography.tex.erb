%!TEX root = master.tex

\section*{Literaturverzeichnis}
\markboth{Literaturverzeichnis}{\thepage}
\addcontentsline{toc}{section}{Literaturverzeichnis}

<% build.bibliography.each do |o| %>

\begin{minipage}{\linewidth}
\textbf{<%= o.label %>} \\ 
<%= o.authors.join('; ') %>:
<%= o.title %>.<% if o.in_compilation? %> 
  In: <%= o.in_compilation %>. \\
<% else %>
  <% if o.edition? %><%= o.edition %>. Auflage, <% end %><%= o.place if o.place? %> <%= o.year %>. \\
<% end %>
\end{minipage}

<% end %>
