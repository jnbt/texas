<%= page_break %>

<% if o.title.to_s.size > 0 %>
# <%= o.title %>
<% end %>

<% templates = [] %>

<% templates = templates_by_glob(o.glob) if o.glob %>
<% templates = o.templates if o.templates %>

<% templates.each_with_index do |template, index| %>
<%= render template %>

<%= scene_delimiter unless index == templates.size - 1 %>
<% end %>
